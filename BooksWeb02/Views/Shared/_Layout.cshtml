<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NavbarStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BooksWeb02.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <header>

       <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container-fluid">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" class="logo" alt="Team E"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="author" asp-action="index" >Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="author" asp-action="add" >Add Authors</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="book" asp-action="index">Books</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="book" asp-action="add">Add Books</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="book" asp-action="favs">Favourites</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="review" asp-action="index">Reviews</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="btn-group ">
                <button type="button" class="btn dropdown-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-align-justify"></span>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <button> <a class="dropdown-item" asp-action="Add" asp-controller="User">Sign Up</a> </button>
                    <button> <a class="dropdown-item" asp-action="Login" asp-controller="User"> Login</a> </button>
                    <button class="dropdown-item" type="button">Members</button>
                </div>
            </div>

            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2023 - Team E Book Management System - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
